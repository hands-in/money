{
  "name": "@handsin/<product-name>-<language-(optional)>",
  "version": "0.0.1",
  "description": "ADD-DESCRIPTION-HERE",
  "author": "Hands In Ltd. (https://handsin.com)",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf build && rollup -c rollup.config.mjs",
    "lint": "eslint --ext .js,.ts --ignore-path .gitignore --max-warnings 0 .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:dts": "tsc --noEmit --isolatedModules build/template-ts.d.ts",
    "docs": "typedoc src/index.ts --out docs",
    "release": "semantic-release"
  },
  "main": "build/template-ts.cjs.js",
  "module": "build/template-ts.esm.js",
  "types": "build/template-ts.d.ts",
  "files": [
    "build"
  ],
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@handsin/eslint-config": "^1.0.11",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/jest": "^29.5.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "rollup": "^3.26.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-license": "^3.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semantic-release": "^21.0.6",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  }
}
