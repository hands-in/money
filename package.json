{
  "private": false,
  "name": "@handsin/money",
  "description": "Hands In's safe javascript money library",
  "publishConfig": {
    "access": "public", 
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hands-in/money-node.git"
  },
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "husky install",
    "build": "rimraf build && rollup -c rollup.config.mjs",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:fix": "pnpm run lint --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "docs": "typedoc src/main/index.ts --out docs",
    "release": "semantic-release"
  },
  "version": "1.2.1",
  "author": "Hands In Ltd. (https://handsin.com)",
  "license": "MIT",
  "engines": {
    "node": "16.X.X",
    "pnpm": "8.X.X"
  },
  "main": "build/index.cjs.js",
  "module": "build/index.esm.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "packageManager": "pnpm@8.6.6",
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts}": "pnpm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@handsin/eslint-config": "^1.0.12",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "9",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "8",
    "@semantic-release/npm": "9",
    "@semantic-release/release-notes-generator": "10",
    "@types/jest": "^29.5.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-license": "^3.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semantic-release": "19.0.5",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "big.js": "^6.2.1"
  }
}
