{
  "name": "@handsin/money",
  "description": "Hands In's internal safe javascript money library",
  "private": true,
  "version": "0.0.1",
  "author": "Hands In Ltd. (https://handsin.com)",
  "license": "MIT",
  "main": "build/index.cjs.js",
  "module": "build/index.esm.js",
  "types": "build/index.d.ts",
  "files": [
    "build"
  ],
  "engines": {
    "node": "16.X.X"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf build && rollup -c rollup.config.mjs",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:dts": "tsc --noEmit --isolatedModules build/index.d.ts",
    "docs": "typedoc src/main/index.ts --out docs",
    "release": "semantic-release"
  },
  "sideEffects": false,
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@handsin/eslint-config": "^1.0.12",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-typescript": "^11.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.3",
    "@semantic-release/npm": "^10.0.4",
    "@types/big.js": "^6.1.6",
    "@types/jest": "^29.5.2",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.3",
    "rimraf": "^5.0.1",
    "rollup": "^3.26.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-license": "^3.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semantic-release": "^21.0.6",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "big.js": "^6.2.1"
  }
}
